
<header class="text-center">
  <h1 class="text-center" id="main-header">Pizza Logger!</h1>  
</header>

<div class="container">
    
  <div class="row"> 
    
    <!-- 'Pizzas To Eat' Panel -->
    <div class="col-md-4" id="eat">
      <div class="panel panel-danger"> 
       
        <div class="panel-heading">
           <h3>Pizzas To Eat</h3>
        </div>
        
        <div class="panel-body">                 
          
          <table class="table table-striped"> <!-- .table-striped alternates table row colors -->
            <thead>
              <tr>
                  <th>Pizza</th>
                  <th>Name</th>
                  <th></th>

                          
              </tr>
            </thead>
            <tbody >
              {{#each pizzas}}
              {{#unless this.devoured}}
                <tr>
                  <td>{{this.Pizza.pizza_name}}</td>
                  
                  <td>  
                    <form action="/customer/{{this.id}}" method="POST">
                      <input class="name" type="text" name="customer_name" placeholder="name">
                      <button class="btn" type="submit">EAT ME!</button>
                    </form>
                  </td>
                </tr>
              {{/unless}}
            {{/each}}

            </tbody>
          </table>
        </div><!-- END panel-body -->
      </div><!-- END panel -->
    </div><!-- End #eat -->  
    
    <!-- 'Add A Pizza' Panel -->
    <div class="col-md-4" id="add-pizza">
      <div class="panel panel-danger"> 
       
        <div class="panel-heading">
           <h3>Add A Pizza</h3>
        </div>
        
        <div class="panel-body" id="add-panel">
 
          <form  action="/pizza" method="POST">

            <div class="form-group" id="add-form">
             {{!--  <label for="addPizza">Pizza Name:</label> --}}
              <input type="text" id="addPizza" name="pizza_name" placeholder="Pizza Name">
            </div>

            <button class="btn" type="submit">Add Pizza</button>
          
          </form>
        </div><!-- panel-body -->
      </div><!-- panel-->
    </div><!-- End col -->

    <!-- 'Devoured' Panel -->
    <div class="col-md-4">  
      <div class="panel panel-danger"> 
       
        <div class="panel-heading">
           <h3>Devoured</h3>
        </div>
        
        <div class="panel-body"> 

          <table class="table table-striped"> 
            <thead>
              <tr>
                <th></th>

              </tr>
            </thead>
              
            <tbody >
              {{#each pizzas}}
               
                  <tr>              
                    <td>{{this.Pizza.pizza_name}}</td>
                    <td>Eaten By </td>
                    <td>{{this.customer_name}}</td> {{!-- <td>{{this.customer_name}}</td> --}}
                  </tr>
              
              {{/each}}

            </tbody>
          </table>
        </div><!-- panel-body -->
      </div><!-- panel-->
    </div><!-- End col -->  
  
</div><!-- End .container -->

<footer class="footer">
    <div class="container">
        <p>&copy;Douglas Aquilino | <a href="https://github.com/daquilino/Pizza-Sequelized">GitHub Repo</a></p>
    </div>
</footer>

